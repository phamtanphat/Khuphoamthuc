<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemmonanActivity">

    <TextView
        android:layout_marginTop="10dp"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:textColor="#f20"
        android:textSize="35sp"
        android:id="@+id/textviewTieude"
        android:text="Them mon an moi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="Nhap ten mon an moi"
        android:id="@+id/edittextTenmonan"
        android:layout_marginTop="100dp"
        android:layout_below="@id/textviewTieude"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="Nhap gia mon an moi"
        android:id="@+id/edittextGiamonan"
        android:layout_marginTop="70dp"
        android:layout_below="@id/edittextTenmonan"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:text="Huy"
        android:layout_below="@id/edittextGiamonan"
        android:id="@+id/buttonHuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="80dp"
        android:text="Xac nhan"
        android:layout_below="@id/edittextGiamonan"
        android:id="@+id/buttonXacnhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>